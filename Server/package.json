{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "build": "tsc --watch",
    "db": "ts-node src/db/postgres.ts",
    "dev": "tsnd --respawn src/db/postgres.ts",
    "docker": "docker-compose up",
    "lint": "eslint . --ext .ts",
    "migrate": "node-pg-migrate",
    "sequelize": "sequelize --options-path=src/db/options.js",
    "test": "jest --forceExit"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi": "^17.6.0",
    "joi-password": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "node-pg-migrate": "^6.2.1",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "postgres": "^3.1.0",
    "sequelize": "^6.19.0",
    "web3": "^1.7.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.33",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "echo \"---Running ESLint---\" && yarn lint"
    }
  }
}
